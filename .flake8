[flake8]
# Line length - allow longer lines since Black formats to 88 but
# many existing lines are up to 120 chars
max-line-length = 120

# Ignore E203 - conflicts with Black's slice formatting
# See: https://github.com/PyCQA/pycodestyle/issues/373
extend-ignore = E203

# Exclude directories
exclude =
    .venv,
    .git,
    __pycache__,
    .pytest_cache,
    *.egg-info,
    build,
    dist,
    .claude,
    extensions/*,
    node_modules,
    */node_modules/*

# Per-file ignores for tests (allow unused imports in test fixtures)
per-file-ignores =
    tests/*:F401,F841,F541,E402

# McCabe complexity - increased to accommodate complex daemon/registry functions
max-complexity = 35

# Show source code for errors
show-source = true

# Count errors
count = true

# Statistics
statistics = true
