[flake8]
# Line length - match Black's default
max-line-length = 120

# Ignore E203 - conflicts with Black's slice formatting
# See: https://github.com/PyCQA/pycodestyle/issues/373
extend-ignore = E203

# Exclude directories
exclude =
    .venv,
    .git,
    __pycache__,
    .pytest_cache,
    *.egg-info,
    build,
    dist,
    .claude,
    extensions/*,
    tests/*,
    node_modules,
    */node_modules/*

# McCabe complexity - increased to accommodate complex daemon/registry functions
max-complexity = 35

# Show source code for errors
show-source = true

# Count errors
count = true

# Statistics
statistics = true
