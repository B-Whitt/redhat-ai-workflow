
digraph VideoGenerator {
    rankdir=LR;
    bgcolor="transparent";
    node [shape=box, style="rounded,filled", fontname="Arial", fontsize=10];
    edge [fontname="Arial", fontsize=9];

    research [label="AI Research\nContent", fillcolor="#E3F2FD"];

    subgraph cluster_video {
        label="Video Daemon";
        style=filled;
        fillcolor="#FFF3E0";

        render [label="Text\nRenderer", fillcolor="#FFCC80"];
        overlay [label="Video\nOverlay", fillcolor="#FFB74D"];
        stream [label="WebRTC\nStream", fillcolor="#FFA726"];
    }

    v4l2 [label="v4l2loopback\nVirtual Camera", fillcolor="#C8E6C9"];
    meet [label="Google\nMeet", fillcolor="#90CAF9"];

    research -> render;
    render -> overlay;
    overlay -> stream;
    stream -> v4l2;
    v4l2 -> meet;
}
